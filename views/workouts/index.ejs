<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/workouts/index.css">
<%- include('../partials/nav') %>

<main>
  <h1>Workouts</h1>
  <% workouts.forEach(workout => { %>
    <div class="card text-center">
      <a href="/workouts/<%= workout._id %>" class="text-decoration-none">
        <div class="card-body">
          <h3 class="card-title"><%= workout.workoutDate.toDateString() %></h3>
          <p class="card-text">Difficulty: <%= workout.difficulty %></p>
          <form action="/workouts/<%= workout._id %>?_method=DELETE" method="post">
            <button class="btn btn-primary">Delete</button>   
        </div>
      </a>
    </div>
  <% }) %>
</main>



<%- include('../partials/footer') %>